<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="using:UI2.Views"
             xmlns:models="using:Data.Models"
             x:Class="UI2.Views.IncidentsView"
             x:DataType="views:IncidentsView">
    <Grid>
		<Grid.RowDefinitions>
		    <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Incidents" Foreground="White" Margin="8" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
				<DataGrid ItemsSource="{Binding Incidents}" SelectedItem="{Binding SelectedIncident}" AutoGenerateColumns="False" IsReadOnly="True"
              CanUserResizeColumns="True" CanUserSortColumns="True" SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ticket qr-code" Binding="{Binding Ticket.QrCode}" Width="2*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="2*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="4*"/>
                        <DataGridTextColumn Header="Happened at" Binding="{Binding HappenedAt, StringFormat={}{0:HH:mm}}" Width="2*"/>
                        <DataGridCheckBoxColumn Header="Resolved" Binding="{Binding IsResolved}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Column="0" Background="#252525" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock Text="Incident details" FontSize="18" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <Label Content="Ticket qr-code:" Foreground="White"/>
                    <ComboBox Name="ComboBoxTicket" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
                    <Label Content="Type:" Foreground="White"/>
                    <TextBox Name="TextBoxType" Margin="0,0,0,10"/>
                    <Label Content="Description:" Foreground="White"/>
                    <TextBox Name="TextBoxDescription" Margin="0,0,0,10" HorizontalAlignment="Stretch" TextWrapping="Wrap" Height="80"/>
                    <Label Content="Happened at:" Foreground="White"/>
                    <TimePicker Name="DatePickerHappenedAt" Margin="0,0,0,10" HorizontalAlignment="Stretch" ClockIdentifier="24HourClock"/>
                    <Label Content="Resolved:" Foreground="White"/>
                    <CheckBox Name="CheckBoxIsResolved" Margin="0,0,0,10"/>
                </StackPanel>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Content="Clear" Margin="4" Click="ClearButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="Save changes" Margin="4" Click="SaveButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="Remove incident" Margin="4" Click="RemoveButton_Click" Background="#F51414" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="Add incident" Margin="4" Click="AddButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                </Grid>            
            </Grid>
        </Grid>
    </Grid>
</UserControl>
