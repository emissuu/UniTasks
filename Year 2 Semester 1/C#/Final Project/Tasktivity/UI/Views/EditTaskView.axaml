<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              x:Class="UI.Views.EditTaskView"
             xmlns:models="using:Data.Models"
             xmlns:local="using:UI.Views"
             x:DataType="local:EditTaskView"
             Background="{DynamicResource ThemeSubBackground}"
             CornerRadius="12">
    <UserControl.Styles>
		<Style Selector="TextBox">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
			<Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="CaretBrush" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="SelectionBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Style Selector="^:pointerover">
                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
                <Style Selector="^ /template/ TextBlock#PART_Watermark">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
            </Style>
            <Style Selector="^:focus">
                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </Style>
                <Style Selector="^ /template/ TextBlock#PART_Watermark">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
            </Style>
            <Style Selector="^ /template/ TextBlock#PART_Watermark">
                <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
            </Style>
            <Style Selector="^.Invisible">
				<Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Padding" Value="0,6,6,6"/>
                <Style Selector="^:pointerover">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                    <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBackground}"/>
                    </Style>
                    <Style Selector="^ /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                    </Style>
                </Style>
                <Style Selector="^:focus">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                    <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubBackground}"/>
                    </Style>
                    <Style Selector="^ /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                    </Style>
                </Style>
            </Style>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Style Selector="^:pointerover /template/ ContentPresenter">
			    <Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^.Edit">
                <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                <Setter Property="BorderThickness" Value="3"/>
				<Style Selector="^:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
			        <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                </Style>
            </Style>
            <Style Selector="^.Remove">
                <Setter Property="BorderBrush" Value="#ED6E6E"/>
                <Setter Property="BorderThickness" Value="3"/>
				<Style Selector="^:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="#CF1919"/>
			        <Setter Property="Foreground" Value="#FFF"/>
                </Style>
            </Style>
        </Style>
        <Style Selector="ComboBox">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
			<Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style Selector="^:pointerover">
                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^ /template/ Border#Background">
                    <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
                <Style Selector="^ /template/ PathIcon#DropDownGlyph">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                </Style>
            </Style>
            <Style Selector="^:not(:empty) /template/ PathIcon#DropDownGlyph">
				<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^:focus:pressed /template/ ContentControl#ContentPresenter">
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^:dropdownopen /template/ Border#PopupBorder">
                <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
        </Style>
        <Style Selector="ComboBoxItem">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Style Selector="^:pointerover /template/ ContentPresenter">
				<Setter Property="Background" Value="{DynamicResource ThemeSubBackground}"/>
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^:selected /template/ ContentPresenter">
				<Setter Property="Background" Value="{DynamicResource ThemeSubBackground}"/>
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^:pointerover">
				    <Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
			        <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                </Style>
            </Style>
            <Style Selector="^.ShiftedContent">
				<Setter Property="Padding" Value="8,8,0,8"/>
            </Style>
        </Style>
        <Style Selector="TimePicker">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style Selector="^ /template/ Button#PART_FlyoutButton">
                <Style Selector="^:not(:pointerover) TextBlock">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                    <Setter Property="Margin" Value="0,4,4,0"/>
                </Style>
                <Style Selector="^:not(:pointerover) Rectangle">
                    <Setter Property="Fill" Value="{DynamicResource ThemeForeground}"/>
                </Style>
                <Style Selector="^:pointerover TextBlock">
				    <Setter Property="Foreground" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="Margin" Value="0,4,4,0"/>
                </Style>
                <Style Selector="^:pointerover Rectangle">
                    <Setter Property="Fill" Value="{DynamicResource ThemeBackground}"/>
                </Style>
            </Style>
        </Style>
        <Style Selector="TimePickerPresenter">
            <Style.Resources>
                <SolidColorBrush x:Key="TimePickerFlyoutPresenterHighlightFill" Color="{DynamicResource ThemeSubSubBackground}" Opacity="1"/>
                <SolidColorBrush x:Key="TimePickerFlyoutPresenterSpacerFill" Color="{DynamicResource ThemeSubSubBackground}"/>
            </Style.Resources>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
            <Style Selector="^ /template/ RepeatButton">
				<Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
            </Style>
        </Style>
        <Style Selector="DatePicker">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style Selector="^ /template/ Button#PART_FlyoutButton">
                <Style Selector="^:not(:pointerover) TextBlock">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                    <Setter Property="Margin" Value="0,4,4,0"/>
                </Style>
                <Style Selector="^:not(:pointerover) Rectangle">
                    <Setter Property="Fill" Value="{DynamicResource ThemeForeground}"/>
                </Style>
                <Style Selector="^:pointerover TextBlock">
				    <Setter Property="Foreground" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="Margin" Value="0,4,4,0"/>
                </Style>
                <Style Selector="^:pointerover Rectangle">
                    <Setter Property="Fill" Value="{DynamicResource ThemeBackground}"/>
                </Style>
            </Style>
        </Style>
        <Style Selector="DatePickerPresenter">
            <Style.Resources>
                <SolidColorBrush x:Key="DatePickerFlyoutPresenterHighlightFill" Color="{DynamicResource ThemeSubSubBackground}" Opacity="1"/>
                <SolidColorBrush x:Key="DatePickerFlyoutPresenterSpacerFill" Color="{DynamicResource ThemeSubSubBackground}"/>
            </Style.Resources>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
            <Style Selector="^ /template/ RepeatButton">
				<Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
            </Style>
        </Style>
        <Style Selector="TextBlock">
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
        </Style>
    </UserControl.Styles>
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12" BorderBrush="{DynamicResource ThemeSubBackground}" BorderThickness="4">
        <Grid ColumnDefinitions="*,*" RowDefinitions="76,64,64,*,48">
            <Grid Grid.ColumnSpan="2" Grid.Row="0" ColumnDefinitions="*,64">
			    <TextBox Grid.Column="0" Name="TextBoxName" Text="New task" FontSize="36" Margin="6,6,0,0" Height="64" Classes="Invisible"/>
                <Button Grid.Column="1" Width="40" Height="40" CornerRadius="18" Margin="4" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonClose_Click">
					<Label Content="✕" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </Grid>
            <Grid Grid.ColumnSpan="2" Grid.Row="1" RowDefinitions="20,*" ColumnDefinitions="*,*">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Deadline time"/>
			    <TimePicker Name="TimePickerWhenTo" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" ClockIdentifier="24HourClock"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Deadline date"/>
                <DatePicker Name="DatePickerWhenTo" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" Grid.Row="2" RowDefinitions="20,*" ColumnDefinitions="*,*">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Task size"/>
                <ComboBox Grid.Row="1" Grid.Column="0" Name="ComboBoxSize">
				    <ComboBox.ItemTemplate>
					    <DataTemplate DataType="{x:Type models:TaskSize}">
						    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="DemiBold"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Category"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Name="ComboBoxCategory">
				    <ComboBox.ItemTemplate>
				        <DataTemplate DataType="{x:Type models:Category}">
						    <StackPanel Orientation="Horizontal" Height="16">
							    <Ellipse Width="16" Height="16" VerticalAlignment="Center" Fill="{Binding Color}" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>
            <Grid Grid.ColumnSpan="2" Grid.Row="3" RowDefinitions="20,*">
                <TextBlock Grid.Row="0" Text="Notes"/>
                <TextBox Name="TextBoxNotes" Grid.Row="1" Margin="6,0,6,0" AcceptsReturn="True" AcceptsTab="True" IsUndoEnabled="True" TextWrapping="Wrap"/>
            </Grid>
            <Button Name="ButtonRemove" Grid.Column="0" Grid.Row="4" Margin="6" IsVisible="False" CornerRadius="6" Content="Remove" Width="84" HorizontalAlignment="Left" VerticalAlignment="Center"
                    VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Classes="Remove" Click="ButtonRemove_Click"/>
            <Button Name="ButtonSave" Grid.Column="1" Grid.Row="4" Margin="6" CornerRadius="6" Content="Save" Width="84" HorizontalAlignment="Right" VerticalAlignment="Center"
                    VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Classes="Edit" Click="ButtonSave_Click"/>
        </Grid>
    </Border>
</UserControl>
