<Window x:Class="UI.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Windows"
        mc:Ignorable="d"
        Title="TeamTask" Height="500" Width="800" Icon="/Assets/Logos/TeamTaskLogo.png">
    <Grid>
        <Border Background="Black">
            <Grid ColumnDefinitions="*,280,*">
                <Image Grid.ColumnSpan="3" Source="/Assets/Images/Office_Login_Background.jpg" Stretch="UniformToFill" OpacityMask="Black" Opacity="0.6"/>
                <Border Name="BorderLogin" Grid.Column="1" Background="White" VerticalAlignment="Center" Padding="0,16" CornerRadius="12" Visibility="Visible">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Welcome back!"  Style="{StaticResource TextBlock.h2}" 
               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <TextBlock Text="Login" Style="{StaticResource TextBlock.basic}" Margin="16,0"/>
                        <TextBox Name="TextBoxLogin" Margin="16,2,16,0" Height="24" VerticalContentAlignment="Center"/>
                        <TextBlock Name="TextBlockWrongLogin" Text="Login cannot be empty!" Style="{StaticResource TextBlock.subtext}" Margin="16,-1,16,2" Visibility="Hidden" Foreground="{StaticResource Error}"/>
                        <TextBlock Text="Password" Style="{StaticResource TextBlock.basic}" Margin="16,0"/>
                        <Grid Height="24" Margin="16,2,16,0">
                            <TextBox Name="TextBoxPassword" Margin="0" Height="24" VerticalContentAlignment="Center" TextWrapping="NoWrap" Visibility="Hidden"/>
                            <PasswordBox Name="PasswordBoxPassword" Margin="0" Height="24" VerticalContentAlignment="Center"/>
                            <TextBlock Name="PasswordVisible" Text="/" FontSize="18" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,4"/>
                            <TextBlock Text="👁" Style="{StaticResource TextBlock.basic}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,4,0" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp" Cursor="Hand" Tag="0"/>
                        </Grid>
                        <TextBlock Name="TextBlockWrongPassword" Text="Password cannot be empty!" Style="{StaticResource TextBlock.subtext}" Margin="16,-1,16,4" Visibility="Hidden" Foreground="{StaticResource Error}"/>
                        <Button Content="Log in" Margin="16,0,16,8"  HorizontalAlignment="Stretch" Height="28" Style="{StaticResource Button.round14}" Click="LoginButton_Click"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <TextBlock Style="{StaticResource TextBlock.basic}">
                                Administrator? 
                                <Hyperlink Click="Hyperlink_Click" Foreground="#2AA63E" Cursor="Hand">
                                    Register new account.
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Name="BorderRegister" Grid.Column="1" Background="White" VerticalAlignment="Center" Padding="0,16" CornerRadius="12" Visibility="Hidden">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Hello there!"  Style="{StaticResource TextBlock.h2}"
                            HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <TextBlock Text="Login" Style="{StaticResource TextBlock.basic}" Margin="16,0"/>
                        <TextBox Name="TextBoxRegLogin" Margin="16,2,16,0" Height="24" VerticalContentAlignment="Center"/>
                        <TextBlock Name="TextBlockWrongRegLogin" Text="Login cannot be empty!" Style="{StaticResource TextBlock.subtext}" Margin="16,-1,16,2" Visibility="Hidden" Foreground="{StaticResource Error}"/>
                        <TextBlock Text="Email" Style="{StaticResource TextBlock.basic}" Margin="16,0"/>
                        <TextBox Name="TextBoxRegEmail" Margin="16,2,16,0" Height="24" VerticalContentAlignment="Center"/>
                        <TextBlock Name="TextBlockWrongRegEmail" Text="Email cannot be empty!" Style="{StaticResource TextBlock.subtext}" Margin="16,-1,16,2" Visibility="Hidden" Foreground="{StaticResource Error}"/>
                        <TextBlock Text="Password" Style="{StaticResource TextBlock.basic}" Margin="16,0"/>
                        <Grid Height="24" Margin="16,2,16,0">
                            <TextBox Name="TextBoxRegPassword" Margin="0" Height="24" VerticalContentAlignment="Center" TextWrapping="NoWrap" Visibility="Hidden"/>
                            <PasswordBox Name="PasswordBoxRegPassword" Margin="0" Height="24" VerticalContentAlignment="Center"/>
                            <TextBlock Name="PasswordRegVisible" Text="/" FontSize="18" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,4"/>
                            <TextBlock Text="👁" Style="{StaticResource TextBlock.basic}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,4,0" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp" Cursor="Hand" Tag="1"/>
                        </Grid>
                        <TextBlock Name="TextBlockWrongRegPassword" Text="Password cannot be empty!" Style="{StaticResource TextBlock.subtext}" Margin="16,-1,16,2" Visibility="Hidden" Foreground="{StaticResource Error}"/>
                        <TextBlock Text="Confirm Password" Style="{StaticResource TextBlock.basic}" Margin="16,0"/>
                        <Grid Height="24" Margin="16,2,16,0">
                            <TextBox Name="TextBoxRegPasswordConfirm" Margin="0" Height="24" VerticalContentAlignment="Center" TextWrapping="NoWrap" Visibility="Hidden"/>
                            <PasswordBox Name="PasswordBoxRegPasswordConfirm" Margin="0" Height="24" VerticalContentAlignment="Center"/>
                            <TextBlock Name="PasswordRegVisibleConfirm" Text="/" FontSize="18" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,4"/>
                            <TextBlock Text="👁" Style="{StaticResource TextBlock.basic}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,4,0" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp" Cursor="Hand" Tag="2"/>
                        </Grid>
                        <TextBlock Name="TextBlockWrongRegPasswordConfirm" Text="Password cannot be empty!" Style="{StaticResource TextBlock.subtext}" Margin="16,-1,16,4" Visibility="Hidden" Foreground="{StaticResource Error}"/>
                        <Button Content="Register as administrator" Margin="16,0,16,8"  HorizontalAlignment="Stretch" Height="28" Style="{StaticResource Button.round14}" Click="RegisterButton_Click"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <TextBlock Style="{StaticResource TextBlock.basic}">
                                 Already have an account?
                                 <Hyperlink Click="Hyperlink_Click" Foreground="#2AA63E" Cursor="Hand">
                                     Back to login.
                                 </Hyperlink>       
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
