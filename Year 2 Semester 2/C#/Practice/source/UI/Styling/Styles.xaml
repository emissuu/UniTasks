<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styling/Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ========== Button ========== -->
    
    <!-- Button.basic -->
    <Style TargetType="Button" x:Key="Button.basic">
        <Setter Property="Background" Value="{StaticResource Green600}"/>
        <Setter Property="Foreground" Value="{StaticResource Neutral900}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter 
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4"/>
            </Style>
        </Style.Resources>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Green700}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Green800}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Button.round14 -->
    <Style TargetType="Button" x:Key="Button.round14"
           BasedOn="{StaticResource Button.basic}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="14"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <!-- Button.sidetab -->
    <Style TargetType="Button" x:Key="Button.sidetab"
           BasedOn="{StaticResource Button.basic}">
        <Setter Property="Background" Value="{StaticResource Green950}"/>
        <Setter Property="Foreground" Value="{StaticResource Neutral100}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="4"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Green900}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Green800}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Button.sidetab.chosen -->
    <Style TargetType="Button" x:Key="Button.sidetab.chosen"
       BasedOn="{StaticResource Button.sidetab}">
        <Setter Property="Background" Value="{StaticResource Green900}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Green800}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Green800}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========== TextBlock ========== -->
    
    <!-- TextBlock.basic -->
    <Style TargetType="TextBlock" x:Key="TextBlock.basic">
        <Setter Property="Foreground" Value="{StaticResource Neutral900}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>
    
    <!-- TextBlock.h1-->
    <Style TargetType="TextBlock" x:Key="TextBlock.h1"
           BasedOn="{StaticResource TextBlock.basic}">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!-- TextBlock.h2-->
    <Style TargetType="TextBlock" x:Key="TextBlock.h2"
           BasedOn="{StaticResource TextBlock.basic}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <!-- TextBlock.h2white -->
    <Style TargetType="TextBlock" x:Key="TextBlock.h2.white"
       BasedOn="{StaticResource TextBlock.h2}">
        <Setter Property="Foreground" Value="{StaticResource Neutral100}"/>
    </Style>

    <!-- TextBlock.h3-->
    <Style TargetType="TextBlock" x:Key="TextBlock.h3"
   BasedOn="{StaticResource TextBlock.basic}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <!-- TextBlock.h3.white-->
    <Style TargetType="TextBlock" x:Key="TextBlock.h3.white"
BasedOn="{StaticResource TextBlock.h3}">
        <Setter Property="Foreground" Value="{StaticResource Neutral100}"/>
    </Style>

    <!-- TextBlock.subtext -->
    <Style TargetType="TextBlock" x:Key="TextBlock.subtext"
           BasedOn="{StaticResource TextBlock.basic}">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <!-- ========== Separator ========== -->

    <!-- Separator.basic -->
    <Style TargetType="Separator" x:Key="Separator.basic">
        <Setter Property="Background" Value="{StaticResource Neutral700}"/>
        <Setter Property="Margin" Value="0"/>
    </Style>
    
    <!-- Separator.sidebar -->
    <Style TargetType="Separator" x:Key="Separator.sidebar"
           BasedOn="{StaticResource Separator.basic}">
        <Setter Property="Background" Value="{StaticResource Green900}"/>
    </Style>

</ResourceDictionary>