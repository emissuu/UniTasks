<UserControl x:Class="UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             xmlns:models="clr-namespace:Data.Models;assembly=Data"
             xmlns:cmodels="clr-namespace:Services.Models;assembly=Services"
             mc:Ignorable="d" 
             d:DesignHeight="675" d:DesignWidth="840" Background="{StaticResource Neutral100}">
    <Grid RowDefinitions="*,2*">
        <Border Grid.Row="0" Padding="0,56,0,0">
            <TextBlock Name="TextBlockWelcome" Text="TextBlockWelcome" Style="{StaticResource TextBlock.h1}" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Background="{StaticResource Green100}" 
                CornerRadius="48,48,0,0" Padding="0,8,0,0">
            <Grid ColumnDefinitions="*,2*">
                <Border Grid.Column="1" Background="{StaticResource Green200}"
                        Margin="8" Padding="4" CornerRadius="24,48,24,24">
                    <Grid>
                        <Grid Name="DisplayTodo" Visibility="Hidden">
                            <TextBlock Name="TextBlockTodo" Text="My tasks" Style="{StaticResource TextBlock.h2}" HorizontalAlignment="Center"/> 
                            <ItemsControl Name="ItemsControlTodo" Style="{StaticResource ItemsControl.basic}" Margin="0,36,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type cmodels:TaskDetails}">
                                        <Border Background="{StaticResource Green300}" 
                                                CornerRadius="6" Height="56"
                                                Margin="2,2" Padding="4">
                                            <Grid ColumnDefinitions="2*,*">
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" Style="{StaticResource TextBlock.h3}" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Due: " Style="{StaticResource TextBlock.basic}"/>
                                                    <TextBlock Text="{Binding GetDueTo}" Style="{StaticResource TextBlock.basic}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                        <Grid Name="DisplayProjects" Visibility="Hidden">
                            <TextBlock Name="TextBlockProjects" Text="My Projects" Style="{StaticResource TextBlock.h2}" HorizontalAlignment="Center"/>
                            <ItemsControl Name="ItemsControlProjects" Style="{StaticResource ItemsControl.basic}" Margin="0,36,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:Project}">
                                        <Border Background="{StaticResource Green300}" 
                                                CornerRadius="6" Height="56"
                                                Margin="2,2" Padding="4">
                                            <Grid ColumnDefinitions="2*,*">
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" Style="{StaticResource TextBlock.h3}" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="Owned by: " Style="{StaticResource TextBlock.basic}"/>
                                                    <TextBlock Text="{Binding CreatedBy.UserName}" Style="{StaticResource TextBlock.basic}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
