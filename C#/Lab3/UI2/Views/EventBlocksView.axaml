<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="using:UI2.Views"
             xmlns:models="using:Data.Models"
             x:Class="UI2.Views.EventBlocksView"
             x:DataType="views:EventBlocksView">
    <Grid>
		<Grid.RowDefinitions>
		    <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Event blocks" Foreground="White" Margin="8" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
				<DataGrid ItemsSource="{Binding EventBlocks}" SelectedItem="{Binding SelectedEventBlock}" AutoGenerateColumns="False" IsReadOnly="True"
              CanUserResizeColumns="True" CanUserSortColumns="True" SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="2*"/>
                        <DataGridTextColumn Header="Zone" Binding="{Binding ZoneActivation.Zone.Name}" Width="2*"/>
                        <DataGridTextColumn Header="Starting" Binding="{Binding StartsAt, StringFormat={}{0:HH:mm}}" Width="*"/>
                        <DataGridTextColumn Header="Ending" Binding="{Binding EndsAt, StringFormat={}{0:HH:mm}}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Column="0" Background="#252525" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock Text="Event block details" FontSize="18" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <Label Content="Name:" Foreground="White"/>
                    <TextBox Name="TextBoxName" Margin="0,0,0,10"/>
                    <Label Content="Type:" Foreground="White"/>
                    <TextBox Name="TextBoxType" Margin="0,0,0,10"/>
                    <Label Content="Zone Activation:" Foreground="White"/>
                    <ComboBox Name="ComboBoxZoneActivation" Margin="0,0,0,10" HorizontalAlignment="Stretch"/>
                    <Label Content="Starts at:" Foreground="White"/>
                    <TimePicker Name="DatePickerStartsAt" Margin="0,0,0,10" HorizontalAlignment="Stretch" MinuteIncrement="5" ClockIdentifier="24HourClock"/>
                    <Label Content="Ends at:" Foreground="White"/>
                    <TimePicker Name="DatePickerEndsAt" Margin="0,0,0,10" HorizontalAlignment="Stretch" MinuteIncrement="5" ClockIdentifier="24HourClock"/>
                </StackPanel>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Content="Clear" Margin="4" Click="ClearButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="Save changes" Margin="4" Click="SaveButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="Remove block" Margin="4" Click="RemoveButton_Click" Background="#F51414" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="Add block" Margin="4" Click="AddButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                </Grid>            
            </Grid>
        </Grid>
    </Grid>
</UserControl>
