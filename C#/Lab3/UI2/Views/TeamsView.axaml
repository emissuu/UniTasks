<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="using:UI2.Views"
             xmlns:models="using:Data.Models"
             x:Class="UI2.Views.TeamsView"
             x:DataType="views:TeamsView">
    <Grid>
        <Grid.RowDefinitions>
		    <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Teams" Foreground="White" Margin="8" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
				<DataGrid ItemsSource="{Binding Teams}" SelectedItem="{Binding SelectedTeam}" AutoGenerateColumns="False" IsReadOnly="True"
              CanUserResizeColumns="True" CanUserSortColumns="True" SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Hand color" Binding="{Binding HandColor}" Width="*"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="3*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Column="0" Background="#252525" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock Text="Partner Details" FontSize="18" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <Label Content="Name:" Foreground="White"/>
                    <TextBox Name="TextBoxName" Margin="0,0,0,10"/>
                    <Label Content="Hand color:" Foreground="White"/>
                    <TextBox Name="TextBoxColor" Margin="0,0,0,10"/>
                    <Label Content="Notes:" Foreground="White"/>
                    <TextBox Name="TextBoxNotes" Margin="0,0,0,10"/>
                </StackPanel>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Content="Clear" Margin="4" Click="ClearButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="Save changes" Margin="4" Click="SaveButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="Remove team" Margin="4" Click="RemoveButton_Click" Background="#F51414" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="Add team" Margin="4" Click="AddButton_Click" Background="#28BAFC" Foreground="Black" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                </Grid>            
            </Grid>
        </Grid>
     </Grid>
</UserControl>
