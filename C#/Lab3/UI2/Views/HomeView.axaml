<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="using:UI2.Views"
             xmlns:models="using:Data.Models"
             x:Class="UI2.Views.HomeView"
             x:DataType="views:HomeView">
    <Grid>
		<Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Welcome to Event Manager!" Margin="20" Foreground="White" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#333" CornerRadius="10" Margin="10" Padding="10">
                
            </Border>
            <Border Grid.Column="1" Background="#333" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
				    <TextBlock Text="Events this week" FontSize="18" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <ListBox Name="EventsListBox" ItemsSource="{Binding Events}" SelectedItem="{Binding SelectedEvent}" SelectionChanged="EventsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
						    <DataTemplate x:DataType="models:Event">
				                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Name}" FontSize="16" Foreground="White"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,-12">
                                        <TextBlock Text="{Binding Date, StringFormat='{}{0:MMMM dd, yyyy}'}" Margin="0,0,36,0" FontSize="14" Foreground="LightGray"/>
                                        <TextBlock Text="Happening in: " FontSize="14" Foreground="LightGray"/>
                                        <TextBlock Text="{Binding Location}" FontSize="14" Foreground="LightGray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
