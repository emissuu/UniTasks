<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="using:UI2.Views"
             xmlns:models="using:Data.Models"
             x:Class="UI2.Views.MainView"
             x:DataType="views:MainView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="TextBlockEventTitle" Margin="20" Foreground="White" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#333" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel VerticalAlignment="Stretch">
					<TextBlock Text="Event blocks" FontSize="18" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <ListBox Name="EventBlocksListBox" ItemsSource="{Binding EventBlocks}" SelectedItem="{Binding SelectedEventBlock}" SelectionChanged="ListBoxEventBlocks_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontSize="16" Foreground="White"/>
                                        <TextBlock Text=" - " FontSize="16" Foreground="White"/>
                                        <TextBlock Text="{Binding Type}" FontSize="16" Foreground="LightGray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,-12">
                                        <TextBlock Text="{Binding StartsAt, StringFormat='{}{0:HH:mm}'}" Margin="0,0,4,0" FontSize="14" Foreground="LightGray"/>
                                        <TextBlock Text="to" FontSize="14" Foreground="LightGray" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding EndsAt, StringFormat='{}{0:HH:mm}'}" FontSize="14" Foreground="LightGray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="#333" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="Incidents" FontSize="18" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <ListBox Name="IncidentsListBox" ItemsSource="{Binding Incidents}" SelectedItem="{Binding SelectedIncident}" SelectionChanged="ListBoxIncidents_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Type}" FontSize="16" Foreground="White"/>
                                        <TextBlock Text="{Binding Resolvation}" FontSize="16" Foreground="LightGray" Margin="8,0,0,0"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,-12">
                                        <TextBlock Text="{Binding HappenedAt, StringFormat='{}{0:HH:mm}'}" Margin="0,0,4,0" FontSize="14" Foreground="LightGray"/>
									    <TextBlock Text="{Binding Description}" FontSize="14" Foreground="LightGray" MaxLines="1"/>	
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
