<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:serviceModels="using:Services.Models"
             x:Class="UI.Views.SettingsView"
             xmlns:models="using:Data.Models"
             xmlns:local="using:UI.Views"
             x:DataType="local:SettingsView"
             Background="{DynamicResource ThemeSubBackground}">
    <UserControl.Styles>
        <Style Selector="ComboBox">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
			<Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="VerticalContentAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style Selector="^:pointerover">
                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^ /template/ Border#Background">
                    <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
                <Style Selector="^ /template/ PathIcon#DropDownGlyph">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                </Style>
            </Style>
            <Style Selector="^:not(:empty) /template/ PathIcon#DropDownGlyph">
				<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^:focus:pressed /template/ ContentControl#ContentPresenter">
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^:dropdownopen /template/ Border#PopupBorder">
                <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
        </Style>
        <Style Selector="ComboBoxItem">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Style Selector="^:pointerover /template/ ContentPresenter">
				<Setter Property="Background" Value="{DynamicResource ThemeSubBackground}"/>
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
            <Style Selector="^:selected /template/ ContentPresenter">
				<Setter Property="Background" Value="{DynamicResource ThemeSubBackground}"/>
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^:pointerover">
				    <Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
			        <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                </Style>
            </Style>
            <Style Selector="^.ShiftedContent">
				<Setter Property="Padding" Value="8,8,0,8"/>
            </Style>
        </Style>
        <Style Selector="TextBox">
			<Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="BorderThickness" Value="3"/>
			<Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="CaretBrush" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="SelectionBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
            <Setter Property="Margin" Value="6,0,6,0"/>
            <Style Selector="^:pointerover">
                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
                <Style Selector="^ /template/ TextBlock#PART_Watermark">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
            </Style>
            <Style Selector="^:focus">
                <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
                    <Setter Property="BorderThickness" Value="3"/>
                </Style>
                <Style Selector="^ /template/ TextBlock#PART_Watermark">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                </Style>
            </Style>
            <Style Selector="^ /template/ TextBlock#PART_Watermark">
                <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
            </Style>
            <Style Selector="^.Invisible">
				<Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Padding" Value="0,6,6,6"/>
                <Style Selector="^:pointerover">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                    <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBackground}"/>
                    </Style>
                    <Style Selector="^ /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                    </Style>
                </Style>
                <Style Selector="^:focus">
                    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
                    <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource ThemeSubBackground}"/>
                    </Style>
                    <Style Selector="^ /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="{DynamicResource ThemeSubSubBackground}"/>
                    </Style>
                </Style>
            </Style>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeBackground}"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ThemeSubSubBackground}"/>
            <Setter Property="BorderThickness" Value="3"/>
			<Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource ThemeSubSubBackground}"/>
			    <Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            </Style>
        </Style>
		<Style Selector="TextBlock.Title">
			<Setter Property="FontSize" Value="24"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeForeground}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="TextBlock.SubTitle">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Foreground" Value="{DynamicResource ThemeSubForeground}"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>
        <Style Selector="Rectangle.Separator">
			<Setter Property="Height" Value="3"/>
			<Setter Property="Fill" Value="{DynamicResource ThemeSubSubBackground}"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Styles>
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12">
        <Grid ColumnDefinitions="*,5*,*">
            <TextBlock Grid.Column="0" Text="Settings" Margin="16,12,4,4" FontSize="30" FontWeight="SemiBold" Foreground="{DynamicResource ThemeForeground}"/> 
			<StackPanel Grid.Column="1" HorizontalAlignment="Stretch" Margin="12,54,12,0" Name="MainStackPanel">
			    <Grid Height="80" ColumnDefinitions="*,200">
				    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="User name" Classes="Title"/>
                        <TextBlock Text="Changes the name displayed on home page" Classes="SubTitle"/>
                    </StackPanel>
                    <TextBox Grid.Column="2" Name="TextBoxUserName" Width="160" VerticalAlignment="Center"/>
                </Grid>
                <Rectangle Classes="Separator"/>
                <Grid Height="80" ColumnDefinitions="*,200">
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Theme" Classes="Title"/>
                        <TextBlock Text="Changes the look of your app. Theme editor is coming in future updates" TextWrapping="Wrap" Classes="SubTitle"/>
                    </StackPanel>
                    <ComboBox Grid.Column="1" Name="ComboBoxThemes" Width="160" VerticalAlignment="Center">
						<ComboBox.ItemTemplate>
				            <DataTemplate DataType="{x:Type serviceModels:ThemeColors}">
						        <StackPanel Orientation="Horizontal" Height="16">
							        <Ellipse Width="16" Height="16" VerticalAlignment="Center" Fill="{Binding Accent}" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource ThemeForeground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
            </StackPanel>
            <Button Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="16" Content="Save changes" Width="120" CornerRadius="6" Click="ButtonSaveChanges_Click"/>
        </Grid>
    </Border>
</UserControl>
