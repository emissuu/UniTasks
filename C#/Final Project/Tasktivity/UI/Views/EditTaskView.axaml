<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              x:Class="UI.Views.EditTaskView"
             xmlns:models="using:Data.Models"
             xmlns:local="using:UI.Views"
             x:DataType="local:EditTaskView"
             Background="{DynamicResource ThemeSubBackground}">
    <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12">
        <TextBlock Text="Edit tasks, go on EDIT THEM!!!!" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource ThemeAccent}"/>
    </Border>
</UserControl>
