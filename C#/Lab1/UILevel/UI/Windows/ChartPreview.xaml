<Window x:Class="DataProcessing.UI.Windows.ChartPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataProcessing.UI.Windows"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Chart Preview" Height="360" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,8,0">
            <Label Content="Title:"/>
            <TextBox Name="ChartTitleTextBox" Margin="4" TextChanged="ChartTitleTextBox_TextChanged"/>
            <Separator Margin="8,8,8,8"/>
            <Label Content="Chart type:" />
            <ComboBox Name="ChartTypeComboBox" Margin="4" 
                      SelectedIndex="0" SelectionChanged="ChartTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Bar"/>
                <ComboBoxItem Content="Line"/>
                <ComboBoxItem Content="Pie"/>
            </ComboBox>
            <Separator Margin="8,8,8,8"/>
            <Label Content="Variable"/>
            <ComboBox Name="VariableComboBox" Margin="4" 
                      SelectedIndex="0" SelectionChanged="VariableComboBox_SelectionChanged">
                <ComboBoxItem Content="Artists"/>
                <ComboBoxItem Content="Genres"/>
                <ComboBoxItem Content="Release Year"/>
                <ComboBoxItem Content="Release Month"/>
                <ComboBoxItem Content="User Score"/>
                <ComboBoxItem Content="Rating Count"/>
            </ComboBox>
        </StackPanel>
        <Border Grid.Column="1"
                BorderBrush="DarkGray" BorderThickness="2,0,0,0" Margin="0,0,0,0">
            <oxy:PlotView Name="PlotView" Grid.Column="1" Margin="4"/>
        </Border>
    </Grid>
</Window>
