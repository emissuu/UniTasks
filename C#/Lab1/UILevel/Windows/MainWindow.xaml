<Window x:Class="DataProcessing.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataProcessing.Windows"
        mc:Ignorable="d"
        Title="Music Store" Icon="../Resources/MusicStoreIcon.png" Height="480" Width="960" MinHeight="360" MinWidth="600">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="MenuItemPanelTemplate">
            <StackPanel Margin="-32,0,-32,0" Background="White"/>
        </ItemsPanelTemplate>
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="ItemsPanel" Value="{StaticResource MenuItemPanelTemplate}"/>
        </Style>
        <Style TargetType="{x:Type ContextMenu}">
            <Setter Property="ItemsPanel" Value="{StaticResource MenuItemPanelTemplate}"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <!-- First row -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenDataset_Click"/>
                <MenuItem Header="Save as..." Click="SaveDataset_Click"/>
            </MenuItem>
            <MenuItem Header="Reports">
                <MenuItem Header="Generate DOCX" Tag="docx" Click="CreateReport_Click"/>
                <MenuItem Header="Generate XLSX" Tag="xlsx" Click="CreateReport_Click"/>
            </MenuItem>
            <MenuItem Header="Charts">
                <MenuItem Header="Create chart" Click="CreateChart_Click"/>
            </MenuItem>
            <MenuItem Header="Row">
                <MenuItem Header="Add row"/>
                <MenuItem Header="Move row"/>
                <MenuItem Header="Remove row"/>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="About program"/>
            </MenuItem>
        </Menu>
        <!-- Second row -->
        <Border Grid.Row="1"
                BorderBrush="DarkGray" BorderThickness="0,2,0,2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="TextBoxItem" Grid.Column="0"
                             Margin="2" Text="Selected item"/>
                    <Button Grid.Column="1"
                        Margin="2" Content="Save"/>
                </Grid>
                <DataGrid Name="MainDataGrid" Grid.Row="1"
                          Margin="2" BorderBrush="Gray" BorderThickness="1"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdPlusOne}"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist}"/>
                        <DataGridTextColumn Header="Release date" Binding="{Binding ReleaseDate}"/>
                        <DataGridTextColumn Header="Genres" Binding="{Binding Genres}"/>
                        <DataGridTextColumn Header="User score" Binding="{Binding User_Score}"/>
                        <DataGridTextColumn Header="Rating count" Binding="{Binding Rating}"/>
                        <DataGridTextColumn Header="Album link" Binding="{Binding Album_Link}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        <!-- Third row -->
        <StatusBar Grid.Row="2">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Name="StatusBarText" Grid.Column="0"
                           Content="statusValue"/>
            <Separator Grid.Column="1" BorderBrush="DarkGray"/>
            <StatusBarItem Name="StatusBarPath" Grid.Column="2"
                           Content="pathValue"/>
        </StatusBar>
    </Grid>
</Window>
